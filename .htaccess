# ------------------------------------------------------------------------------
# marchasdecristo.com - Apache rewrite rules (SEO + human-friendly URLs)
# ------------------------------------------------------------------------------

Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Canonical host: www -> non-www
  RewriteCond %{HTTP_HOST} ^www\.marchasdecristo\.com$ [NC]
  RewriteRule ^ https://marchasdecristo.com%{REQUEST_URI} [R=301,L]

  # 2) Force HTTPS
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # 3) Remove trailing slash (except real directories)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} .+/$
  RewriteRule ^(.+)/$ /$1 [R=301,L]

  # 4) Block admin/login routes at Apache level
  RewriteRule ^login(?:/|$) - [F,L,NC]
  RewriteRule ^dashboard(?:/|$) - [F,L,NC]
  RewriteRule ^api/login(?:/|$) - [F,L,NC]
  RewriteRule ^api/admin(?:/|$) - [F,L,NC]

  # 5) Allow slug-id URLs and map internally to id-only routes used by app
  #    /marcha/consuelo-gitano-330 -> /marcha/330
  #    /autor/angel-manuel-cebrero-miranda-78 -> /autor/78
  #    /disco/fons-vitae-153 -> /disco/153
  #    /banda/am-virgen-de-los-reyes-6 -> /banda/6
  RewriteRule ^(marcha|autor|disco|banda)/[a-z0-9]+(?:-[a-z0-9]+)*-([0-9]+)/?$ /$1/$2 [NC,L,QSA]

  # 6) Do not rewrite API requests
  RewriteCond %{REQUEST_URI} ^/api/ [NC]
  RewriteRule ^ - [L]

  # 7) Existing files/folders should be served as-is
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 8) SPA fallback (Vue history mode)
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_headers.c>
  # Basic SEO/perf-friendly headers
  Header unset ETag
  FileETag None
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/webp "access plus 6 months"
  ExpiresByType image/png "access plus 6 months"
  ExpiresByType image/jpeg "access plus 6 months"
  ExpiresByType image/svg+xml "access plus 6 months"
  ExpiresByType font/woff2 "access plus 6 months"
</IfModule>
